{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "watch": true,
    "lib": ["es5", "es2015.promise", "dom", "es2015", "es2017"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
